{
  "name": "jest-typescript-example",
  "version": "1.0.0",
  "description": "TypeScript and Jest 30 example with custom matchers using @jest/globals (no @types/jest)",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:test": "npm run build && npm test",
    "clean": "rm -rf dist coverage",
    "clean:build": "npm run clean && npm run build",
    "clean:test": "npm run clean && npm run build && npm test",
    "dev": "ts-node src/index.ts"
  },
  "keywords": [
    "typescript",
    "jest",
    "testing",
    "custom-matchers"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^30.0.3",
    "@types/node": "^20.6.0",
    "jest": "^30.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {}
}
